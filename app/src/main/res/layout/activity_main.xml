<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <FrameLayout
        android:id="@+id/fl_drawing_view_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="4dp"
        android:background="@drawable/background_drawing_view_layout"
        android:padding="1dp"
        app:layout_constraintBottom_toTopOf="@+id/ll_action_buttons"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="image"
            android:scaleType="centerCrop" />

        <com.justdevelopers.drawingapp.DrawingView
            android:id="@+id/drawingView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#22FFFFFF">

        </com.justdevelopers.drawingapp.DrawingView>

    </FrameLayout>
    <LinearLayout
        android:id="@+id/ll_action_buttons"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/fl_drawing_view_container"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        >
    <ImageButton
        android:id="@+id/ibGallery"
        android:layout_width="50dp"
        android:padding="5dp"
        android:layout_height="50dp"
        android:layout_margin="4dp"
        android:contentDescription="set colour"
        android:src="@drawable/ic_gallery"
        android:elevation="5dp"

        android:scaleType="fitXY"/>
    <ImageButton
        android:id="@+id/ibBrush"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="4dp"
        android:contentDescription="set brush size"
        android:padding="5dp"
        android:src="@drawable/ic_brush"
        android:scaleType="fitXY"
        android:elevation="5dp"/>
    <ImageButton
        android:id="@+id/ibColor"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="4dp"
        android:contentDescription="choose color"
        android:src="@drawable/ic_colorpicker"
        android:scaleType="fitXY"
        android:padding="5dp"
        android:elevation="5dp"/>
        <ImageButton
        android:id="@+id/ibUndo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="4dp"
        android:contentDescription="undo"
        android:src="@drawable/ic_undo"
        android:scaleType="fitXY"
        android:padding="5dp"
        android:elevation="5dp"/>
        <ImageButton
        android:id="@+id/ibRedo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="4dp"
        android:contentDescription="undo"
        android:src="@drawable/ic_redo"
        android:scaleType="fitXY"
        android:padding="5dp"
        android:elevation="5dp"/>
        <ImageButton
        android:id="@+id/ibSave"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="4dp"
        android:contentDescription="save"
        android:src="@drawable/ic_save"
        android:scaleType="fitXY"
        android:padding="5dp"
        android:elevation="5dp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>